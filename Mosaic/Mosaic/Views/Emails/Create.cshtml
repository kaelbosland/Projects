@model Mosaic.Models.Email

@{
    ViewData["Title"] = "Create";
}

@{ 
    string receiver = (string)ViewData["receiver"];
    string sender = (string)ViewData["sender"];
    string subject = (string)ViewData["subject"];
}

<h2>Create</h2>

<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sender" class="control-label"></label>
                <input type="text" asp-for="Sender" class="form-control" value="@sender" id="sender" name="sender" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Receiver" class="control-label"></label>
                <input asp-for="Receiver" class="form-control" value="@receiver" id="receiver" name="receiver"/>
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" value="@subject" id="subject" name="subject"/>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" id="message" name="message"/>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Emails" asp-action="Menu">Back to Email Menu</a>
</div>

