<Window x:Class="BudgetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="422.667">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="ExtraBold"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,26,0,0"/>
        <Label Content="Starting Amount" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="ExtraBold" Margin="0,66,0,0"/>
        <TextBox x:Name="startAmt" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,97,0,0"/>
        <Label Content="Timeline (Weeks)" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="ExtraBold" Margin="0,141,0,0"/>
        <TextBox x:Name="timeline" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,172,0,0"/>
        <Button Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,227,0,0" Click="SignUp"/>
    </Grid>
</Window>
